{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Location of incidents",
    "layer": [
      {
        "data": {
          "url": "ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "projection": {
            "type": "mercator",
            "center": [-95, 22],
            "scale": 900
        }
      },
      {
        "data": {"url": "Global Missing Migrants Dataset.csv"},
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "projection": {
            "type": "mercator",
            "center": [-95, 22],
            "scale": 900
          },
        "encoding": {
          "longitude": {"field": "long", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "size": {
            "field": "Total Number of Dead and Missing",
            "type": "quantitative",
            "scale": {
                "domain" :[1,10,100],
                "range": [10, 200]}
          },
          "color": {
            "field": "Migration route",
            "type": "nominal", 
            "scale": {
               "domain": ["Unknown", "US-Mexico border crossing", "Caribbean to US", "Haiti to Dominican Republic"]},
            "legend": {
              "title": "Migration Route"}},
              "tooltip": [
                {"field": "Migration route", "type": "nominal"},
                {
                  "field": "Total Number of Dead and Missing",
                  "type": "quantitative",
                  "title": "Number of Dead and Missing"
            }]
        }
      }
    ]
  }
  