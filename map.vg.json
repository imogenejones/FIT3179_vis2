{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Missing Migrant accident locations",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
              "url": "ne_110m_admin_0_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },

        {
            "data": {
            "url":
            "Global Missing Migrants Dataset.csv"
            },
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
            "longitude": {"field": "long", "type":
            "quantitative"},
            "latitude": {"field": "lat", "type":
            "quantitative"},
            "size": {
            "field": "Total Number of Dead and Missing",
            "type": "quantitative",
            "title": "Total Number of Dead and Missing",
            "scale": {"domain": [1, 1022]}
            },
            "color": {
            "field": "Incident year",
            "type": "quantitative",
            "title": "Year",
            "scale": {"scheme": "reds"}
            }
            }
            }
        ]
        }
        
    