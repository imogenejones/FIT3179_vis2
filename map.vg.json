{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Origin Countries of Missing Migrant Incidents",
    "fontSize": 16,
    "font": "Libre Baskerville"
  },
  "width": 600,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
    },
    {
      "data": {
        "url": "ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {"url": "origin_countries.csv"},
            "key": "Country",
            "fields": ["Incidents"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Incidents",
          "type": "quantitative",
          "title": "Incidents",
          "scale": {
            "type": "threshold",
            "domain": [10, 100, 500, 1000],
            "range": ["#89CFEF", "#57A0D2", "#0E4C92","#000080", "#003151"]
            }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Incidents",
            "type": "quantitative",
            "title": "Number of Incidents"
          }
        ]
      }
    }
  ]
}