{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "background": "#e9dac7",
    "layer": [
      {
        "data": {
          "url": "ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "projection": {
            "type": "equirectangular", 
            "center": [15, 15],
            "scale": 600
        }
      },
      {
        "data": {"url": "Global Missing Migrants Dataset.csv"},
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "projection": {
            "type": "equirectangular", 
            "center": [15, 15],
            "scale": 600
          },
        "encoding": {
          "longitude": {"field": "long", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "size": {
            "field": "Total Number of Dead and Missing",
            "type": "quantitative",
            "title": "Dead and missing",
            "scale": {
                "domain" :[1,10,100],
                "range": [10, 200]}
          },
          "color": {
            "field": "Migration route abbr",
            "type": "nominal", 
            "scale": {
                "domain": ["Sahara Desert", "West Mediterranean", "Central Mediterranean", "East Mediterranean", "Hornâ€“Yemen", "West Africa"],
                "range": ["#A6A64C", "#FBA69C", "#7B91E3","#D0F854", "#A1797C", "#4CA6A6" ]},
            "legend": {
              "title": "Migration route abbr"}},
            "tooltip": [
                {"field": "Migration route", "type": "nominal"},
                {
                  "field": "Total Number of Dead and Missing",
                  "type": "quantitative",
                  "title": "Number of Dead and Missing"
            }, 
            {
              "field":"Cause of Death",
              "type": "nominal"
            }]
        }
      }
    ]
  }
  