{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Missing Migrant flows",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
              "url": "ne_110m_admin_0_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },

        {
            "data": {
            "url":
            "Global Missing Migrants Dataset.csv"
            },
            "mark": "line",
            "encoding": {
                "longitude": {"field": "lon_origin", "type": "quantitative"},
                "latitude": {"field": "lat_origin", "type": "quantitative"},
                "longitude2": {"field": "lon_incident"},
                "latitude2": {"field": "lat_incident"},
                "size": {"field": "Total migrants", "type": "quantitative", "legend": {"title": "Total migrants"}}
            }
            }
        ]
        }
        
    